@model CheckYourEligibility_FrontEnd.Models.Children

@{
    ViewData["Title"] = "Add details of your children";
    var childIndex = TempData["childIndex"] as int?;
    var validationMessage = TempData["ValidationMessage"] as string;
 }

@* <a class="govuk-back-link" href="#" onclick="history.back(); return false;">Back</a> *@
<a class="govuk-back-link-nolink"></a>

@if (!ViewData.ModelState.IsValid)
{
    ViewData["Title"] = "Error: Check Details";
    <partial name="_ValidationSummary" model="ViewData.ModelState" />
}

<noscript>
<div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner" id="no-js-warning">
  <div class="govuk-notification-banner__header">
    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
      Important
    </h2>
  </div>
  <div class="govuk-notification-banner__content">
    <p class="govuk-notification-banner__heading">
      You have JavaScript turned off. This will limit some search functionality.
      <br />
      If you can, turn JavaScript on by searching for ‘JavaScript’ in your web browser settings.
    </p>
  </div>
</div>
</noscript>

<h1 class="govuk-heading-l" tabindex="-1">
    Add details of your children
</h1>

<p>Include all children who are in compulsory education..</p>

<form asp-controller="Check" asp-action="Enter_Child_Details" method="post" novalidate>
   <input type="hidden" id="ChildIndex" />

    @for (int i = 0; i < Model.ChildList.Count; i++)
    {
        <div id="childNumber@(@i)">
        <fieldset class="govuk-fieldset moj-add-another__item">
            <legend class="govuk-fieldset__legend moj-add-another__title govuk-fieldset__legend--m">
                Child @(@i + 1) details
            </legend>

            @if (i > 0){
            <button asp-controller="Check" asp-action="Remove_Child" asp-route-index="@i" class="govuk-button govuk-button--secondary moj-add-another__add-button govuk-!-margin-bottom-4 delete-button" data-module="govuk-button">
                Remove Child @(i + 1)
            </button>
            }

            <div class="govuk-form-group">
                <label class="govuk-label govuk-!-font-weight-bold" for="ChildList[@i].FirstName">
                    First name
                </label>
                <p class="govuk-error-message">
                    <span asp-validation-for="ChildList[i].FirstName"></span>
                </p>
                   
                    @if (childIndex ==i)
                    {
                        <input asp-for="ChildList[i].FirstName" id="ChildList[@i].FirstName" class="govuk-input govuk-!-width-two-thirds @(ViewData.ModelState[$"ChildList[{@i}].FirstName"]?.Errors.Count > 0 ? "govuk-input--error" : "")" type="text" aria-label="First name" autofocus/>
                    } else 
                    {
                       <input asp-for="ChildList[i].FirstName" id="ChildList[@i].FirstName" class="govuk-input govuk-!-width-two-thirds @(ViewData.ModelState[$"ChildList[{@i}].FirstName"]?.Errors.Count > 0 ? "govuk-input--error" : "")" type="text" aria-label="First name"/>
                    }
            </div>

            <div class="govuk-form-group">
                <label class="govuk-label govuk-!-font-weight-bold">
                    Last name
                </label>
                <p class="govuk-error-message">
                    <span asp-validation-for="ChildList[i].LastName"></span>
                </p>
                <input asp-for="ChildList[i].LastName" id="ChildList[@i].LastName" class="govuk-input govuk-!-width-two-thirds @(ViewData.ModelState[$"ChildList[{@i}].LastName"]?.Errors.Count > 0 ? "govuk-input--error" : "")" type="text" aria-label="Last Name">
            </div>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" role="group" aria-describedby="school-picker-hint">
                    <label class="govuk-label govuk-!-font-weight-bold noJsRemove" for="school-picker">
                        School
                    </label>

                    <div id="school-picker-hint" class="govuk-hint noJsRemove" aria-label="Type to search">
                        Type to search
                    </div>

                    <p class="govuk-error-message">
                        <span asp-validation-for="ChildList[i].School.URN"></span>
                    </p>
                        <input id="school-search-@i" class="noJsRemove govuk-search school-search govuk-input govuk-!-width-two-thirds @(ViewData.ModelState[$"ChildList[{@i}].School.URN"]?.Errors.Count > 0 ? "govuk-input--error" : "")" type="text" autocomplete="off" aria-label="School Search" />
                    <input hidden asp-for="ChildList[i].School.Name" id="ChildList[@i].School.Name" />
                    
                    <label class="govuk-label govuk-!-font-weight-bold noJsShow" for="ChildList[@i].School.URN">
                        School Unique Reference Number (URN)
                    </label>
                    <input asp-for="ChildList[i].School.URN" id="ChildList[@i].School.URN" class="noJsShow govuk-search govuk-input govuk-!-width-two-thirds" aria-label="School" />
                    <input hidden asp-for="ChildList[i].School.Postcode" id="ChildList[@i].School.Postcode" />
                    <input hidden asp-for="ChildList[i].School.LA" id="ChildList[@i].School.LA" />
                    <ul id="schoolList@(@i)" class="govuk-!-width-two-thirds"></ul>
                </fieldset>
                <noscript>
                        <details class="govuk-details" open="">
                            <summary class="govuk-details__summary">
                                <span class="govuk-details__summary-text">
                                    Help with finding the URN
                                </span>
                            </summary>
                            <div class="govuk-details__text">
                                <p class="govuk-body">You have JavaScript turned off, so we can only find your child’s school using the school URN.</p>
                                <p class="govuk-body">If you do not know the URN for your child’s school, you can:</p>
                                <ul class="govuk-list govuk-list--bullet">
                                    <li>turn JavaScript on by searching for ‘JavaScript’ in your web browser settings - you’ll then be able to search by school name</li>
                                    <li>do a web search for the URN, for example ‘Ilkley Grammar School URN’</li>
                                    <li>call your child's school and ask for the URN</li>
                                    <li>
                                        ask your child's school to complete this application for you instead
                                    </li>
                                </ul>
                            </div>
                        </details>
                </noscript>
            </div>

            <div class="govuk-form-group" data-type="dob-form-group">
                <fieldset class="govuk-fieldset" role="group" aria-describedby="dob-hint">

                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                        Date of birth
                    </legend>

                    <div id="dob-hint" class="govuk-hint">
                        For example, 27 3 2007
                    </div>

                    <span asp-validation-for="ChildList[i].DateOfBirth" class="govuk-error-message"></span>

                    <div class="govuk-date-input" id="ChildList[@i].DateOfBirth">

                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group" data-type="dob-input">
                                <label class="govuk-label govuk-date-input__label" for="ch1-day">
                                    Day
                                </label>
                                    <input asp-for="ChildList[i].Day" id="ChildList[@i].Day" data-type="dob" class="govuk-input govuk-date-input__input govuk-input--width-2 @(ViewData.ModelState[$"ChildList[{@i}].DateOfBirth.Day"]?.Errors.Count > 0 ? "govuk-input--error" : "")" type="text" inputmode="numeric" maxlength="2" aria-label="Day">
                            </div>
                        </div>

                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group" data-type="dob-input">
                                <label class="govuk-label govuk-date-input__label" for="ch1-month">
                                    Month
                                </label>
                                    <input asp-for="ChildList[i].Month" id="ChildList[@i].Month" data-type="dob" class="govuk-input govuk-date-input__input govuk-input--width-2 @(ViewData.ModelState[$"ChildList[{@i}].DateOfBirth.Month"]?.Errors.Count > 0 ? "govuk-input--error" : "")" type="text" inputmode="numeric" maxlength="2" aria-label="Month">
                            </div>
                        </div>

                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group" data-type="dob-input">
                                <label class="govuk-label govuk-date-input__label" for="ch1-year">
                                    Year
                                </label>
                                    <input asp-for="ChildList[i].Year" id="ChildList[@i].Year" data-type="dob" class="govuk-input govuk-date-input__input govuk-input--width-4 @(ViewData.ModelState[$"ChildList[{@i}].DateOfBirth.Year"]?.Errors.Count > 0 ? "govuk-input--error" : "")" type="text" inputmode="numeric" maxlength="4" aria-label="Year">
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </fieldset>
        </div>
    }

    <div class="add-button-container">
        <div class="moj-button-action">
            <button asp-controller="Check" asp-action="Add_Child" class="govuk-button govuk-button--secondary moj-add-another__add-button govuk-!-margin-bottom-4" data-module="govuk-button">
                Add another child
            </button>
        </div>
    </div>

    <div class="moj-button-action">
        <button class="govuk-button govuk-!-margin-top-5" data-module="govuk-button">
            Save and continue
        </button>
    </div>
</form>


<script src="/js/validationSummary.js"></script>
<script src="/js/schoolSearch.js"></script>