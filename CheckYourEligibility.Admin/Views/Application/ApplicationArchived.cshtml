@inject IConfiguration Configuration
@model CheckYourEligibility.Admin.ViewModels.ApplicationDetailViewModel

@{
    ViewData["Title"] = "Application archived";
}

<div class="govuk-grid-column-two-thirds">
    <a class="govuk-back-link-nolink"></a>

    <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">
            Record for @Model.ParentName has been archived
        </h1>

        <div class="govuk-panel__body">
            Application reference number<br> @Model.Reference
        </div>
        <br>
        <div class="govuk-panel__body">
            Archived on @DateTime.Now.ToString("dd MMM yyyy")
        </div>
    </div>

    <p class="govuk-body">
        Your organisation can no longer edit this record.
        Go to the @Html.ActionLink("archived record", "ApplicationDetail", "Application", new { id = Model.Id }) to view or restore this record.
    </p>
    <div class="govuk-!-padding-bottom-3"></div>

    <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
            <span class="govuk-visually-hidden">Warning</span>
            This record will be deleted after 6 months if it is not restored.
        </strong>
    </div>
</div>
