@model CheckYourEligibility_FrontEnd.Models.ParentGuardian

@{
    ViewData["Title"] = "Check Details";
}

<a class="govuk-back-link" href="@Url.Action("Index", "Home")" onclick="history.back(); return false;">Back</a>
@* <a class="govuk-back-link-nolink"></a> *@

@if (!ViewData.ModelState.IsValid)
{
    ViewData["Title"] = "Error: Check Details";
    <partial name="_ValidationSummary" model="ViewData.ModelState" />
}

<h1 class="govuk-heading-l">Enter parent or guardian details</h1>

<form asp-controller="Check" asp-action="Enter_Details" method="post">
    <fieldset class="govuk-fieldset">
        <div class="govuk-form-group">
            <label class="govuk-label" for="FirstName">
                Parent or guardian first name
            </label>
            <p class="govuk-error-message">
                <span asp-validation-for="FirstName"></span>
            </p>
            <input class="govuk-input govuk-input--width-20" asp-for="FirstName" type="text" aria-label="Parent or guardian first name">
        </div>

        <div class="govuk-form-group">
            <label class="govuk-label" for="LastName">
                Parent or guardian last name
            </label>
            <p class="govuk-error-message">
                <span asp-validation-for="LastName"></span>
            </p>
            <input class="govuk-input govuk-input--width-20" asp-for="LastName" type="text" aria-label="Parent or guardian last name">
        </div>

        <div class="govuk-form-group">
            <label class="govuk-label" for="EmailAddress">
                Parent or guardian email address
            </label>
            <p class="govuk-error-message">
                <span asp-validation-for="EmailAddress"></span>
            </p>
            <input class="govuk-input govuk-input--width-20" asp-for="EmailAddress" type="text" aria-label="Parent or guardian email address">
        </div>

        <div class="govuk-form-group" data-type="NINAS-form-group">
            <fieldset class="govuk-fieldset" role="group" aria-describedby="NINAS-hint">

                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                    Parent or guardian National Insurance number or Asylum Support Reference Number
                </legend>

                <div id="NINAS-hint" class="govuk-hint">
                    Please only provide either a National Insurance Number or an Asylum Support Reference Number and leave the other field blank.
                </div>

                <div class="govuk-NINAS-input" id="NINAS">

                    <div class="govuk-NINAS-input__item">
                        <div class="govuk-form-group" data-type="NINAS-input">

                            <label class="govuk-label" for="NationalInsuranceNumber">
                                Parent or guardian National Insurance number
                            </label>
                            <p class="govuk-error-message">
                                <span asp-validation-for="NationalInsuranceNumber"></span>
                            </p>
                            <input class="govuk-input govuk-input govuk-input--width-20" asp-for="NationalInsuranceNumber" type="text" data-type="NINAS" aria-label="Parent or guardian National Insurance Number" />

                            <p class="paragraph-add-margin-ingroup">Or</p>

                            <label class="govuk-label" for="NationalAsylumSeekerServiceNumber">
                                Parent or guardian Asylum Support Reference Number
                            </label>
                            <p class="govuk-error-message">
                                <span asp-validation-for="NationalAsylumSeekerServiceNumber"></span>
                            </p>
                            <input class="govuk-input govuk-input govuk-input--width-20" asp-for="NationalAsylumSeekerServiceNumber" type="text" data-type="NINAS" aria-label="Parent or guardian Asylum Support Reference Number" />
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>

        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" role="group" aria-describedby="dob-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                    Parent of Guardian date of birth
                </legend>

                <div id="dob-hint" class="govuk-hint">
                    For example, 31 3 1980
                </div>

                <span asp-validation-for="DateOfBirth" class="govuk-error-message"></span>

                <div class="govuk-date-input" id="DateOfBirth">
                    <div class="govuk-date-input__item">
                        <div class="govuk-form-group">
                            <label class="govuk-label govuk-date-input__label" for="Day">
                                Day
                            </label>
                            <input class="govuk-input govuk-date-input__input govuk-input--width-2" asp-for="Day" id="Day" type="text" inputmode="numeric" maxlength="2" aria-label="Day" />
                        </div>
                    </div>

                    <div class="govuk-date-input__item">
                        <div class="govuk-form-group">
                            <label class="govuk-label govuk-date-input__label" for="Month">
                                Month
                            </label>
                            <input class="govuk-input govuk-date-input__input govuk-input--width-2" asp-for="Month" id="Month" type="text" inputmode="numeric" maxlength="2" aria-label="Month" />
                        </div>
                    </div>

                    <div class="govuk-date-input__item">
                        <div class="govuk-form-group">
                            <label class="govuk-label govuk-date-input__label" for="Year">
                                Year
                            </label>
                            <input class="govuk-input govuk-date-input__input govuk-input--width-4" asp-for="Year" id="Year" type="text" inputmode="numeric" maxlength="4" aria-label="Year" />
                        </div>
                    </div>
                </div>

            </fieldset>
        </div>

        <button class="govuk-button govuk-!-margin-top-5" data-module="govuk-button">
            Perform check
        </button>
</form>

<script src="/js/validationSummary.js"></script>