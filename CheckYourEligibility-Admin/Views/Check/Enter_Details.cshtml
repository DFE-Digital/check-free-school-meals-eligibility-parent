@model CheckYourEligibility_FrontEnd.Models.ParentGuardian

@{
    ViewData["Title"] = "Check Details";
    ViewData["Layout"] = "two_thirds";
}

<a class="govuk-back-link" href="@Url.Action("Index", "Home")" onclick="history.back(); return false;">Back</a>
@* <a class="govuk-back-link-nolink"></a> *@

@if (!ViewData.ModelState.IsValid)
{
    ViewData["Title"] = "Error: Check Details";
    <partial name="_ValidationSummary" model="ViewData.ModelState" />
}

<h1 class="govuk-heading-l">Run a check for one parent or guardian</h1>
<p class="govuk-body">Enter the details of the parent or guardian who applied for free school meals.</p>
<form asp-controller="Check" asp-action="Enter_Details" method="post">
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Name and email address</legend>
        <div class="govuk-form-group">
            <label class="govuk-label" for="FirstName">
                First name
            </label>
            <p class="govuk-error-message">
                <span asp-validation-for="FirstName"></span>
            </p>
            <input class="govuk-input govuk-input--width-20 @(ViewData.ModelState["FirstName"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="FirstName" type="text" aria-label="First name">
        </div>

        <div class="govuk-form-group">
            <label class="govuk-label" for="LastName">
                Last name
            </label>
            <p class="govuk-error-message">
                <span asp-validation-for="LastName"></span>
            </p>
            <input class="govuk-input govuk-input--width-20 @(ViewData.ModelState["LastName"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="LastName" type="text" aria-label="Last name">
        </div>

        <div class="govuk-form-group">
            <label class="govuk-label" for="EmailAddress">
                Email address
            </label>
            <p class="govuk-error-message">
                <span asp-validation-for="EmailAddress"></span>
            </p>
            <input class="govuk-input govuk-input--width-20 @(ViewData.ModelState["EmailAddress"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="EmailAddress" type="text" aria-label="Email address">
        </div>

        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" role="group" aria-describedby="dob-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                    Date of birth
                </legend>

                <div id="dob-hint" class="govuk-hint">
                    For example, 31 3 1980
                </div>

                <span asp-validation-for="DateOfBirth" class="govuk-error-message"></span>

                <div class="govuk-date-input" id="DateOfBirth">
                    <div class="govuk-date-input__item">
                        <div class="govuk-form-group">
                            <label class="govuk-label govuk-date-input__label" for="Day">
                                Day
                            </label>
                            <input class="govuk-input govuk-date-input__input govuk-input--width-2 @(ViewData.ModelState["DateOfBirth.Day"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="Day" id="Day" type="text" inputmode="numeric" maxlength="2" aria-label="Day" />
                        </div>
                    </div>

                    <div class="govuk-date-input__item">
                        <div class="govuk-form-group">
                            <label class="govuk-label govuk-date-input__label" for="Month">
                                Month
                            </label>
                            <input class="govuk-input govuk-date-input__input govuk-input--width-2 @(ViewData.ModelState["DateOfBirth.Month"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="Month" id="Month" type="text" inputmode="numeric" maxlength="2" aria-label="Month" />
                        </div>
                    </div>

                    <div class="govuk-date-input__item">
                        <div class="govuk-form-group">
                            <label class="govuk-label govuk-date-input__label" for="Year">
                                Year
                            </label>
                            <input class="govuk-input govuk-date-input__input govuk-input--width-4 @(ViewData.ModelState["DateOfBirth.Year"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="Year" id="Year" type="text" inputmode="numeric" maxlength="4" aria-label="Year" />
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>


        <div class="govuk-form-group" data-type="NINAS-form-group">
            <fieldset class="govuk-fieldset" role="group" aria-describedby="NINAS-hint">

                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                    National Insurance number or asylum support reference number
                </legend>

                <div id="NINAS" class="govuk-hint">
                    Select one option.
                </div>
                <p class="govuk-error-message">
                    <span asp-validation-for="NINAS"></span>
                    <span asp-validation-for="NationalInsuranceNumber"></span>
                    <span asp-validation-for="NationalAsylumSeekerServiceNumber"></span>
                </p>

                <div class="govuk-radios" data-module="govuk-radios">
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" asp-for="NinAsrSelection" type="radio" value="NinSelected" aria-controls="conditional-ni-number" aria-expanded="false" aria-label="National Insurance number">
                        <label class="govuk-label govuk-radios__label" for="NationalInsuranceNumber">
                            National Insurance number
                        </label>
                    </div>

                    <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-ni-number">
                        <div class="govuk-form-group">
                            <label class="govuk-label" for="ni-number-entered">
                                Parent or guardian National Insurance number
                            </label>
                            <input class="govuk-input govuk-!-width-one-third @(ViewData.ModelState["NationalInsuranceNumber"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-controller="Check" asp-for="NationalInsuranceNumber" type="text" spellcheck="false" autocomplete="text" aria-label="Parent or guardian National Insurance number">
                        </div>
                    </div>

                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" asp-for="NinAsrSelection" type="radio" value="AsrnSelected" aria-controls="conditional-ni-number-2" aria-expanded="false" aria-label="asylum support reference number">
                        <label class="govuk-label govuk-radios__label" for="ni-number-2">
                            Asylum support reference number
                        </label>
                    </div>

                    <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-ni-number-2">
                        <div class="govuk-form-group">
                            <label class="govuk-label" for="ni-number-entered">
                                Parent or guardian asylum support reference number
                            </label>
                            <input class="govuk-input govuk-!-width-one-third @(ViewData.ModelState["NationalAsylumSeekerServiceNumber"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-controller="Check" asp-for="NationalAsylumSeekerServiceNumber" type="text" spellcheck="false" autocomplete="text" aria-label="Parent or guardian asylum support reference number">
                        </div>
                    </div>

                </div>
            </fieldset>
        </div>

    <button class="govuk-button govuk-!-margin-top-5" data-module="govuk-button">
        Perform check
    </button>
</form>

<script src="/js/validationSummary.js"></script>